# Environment variables template for Scry
# Copy this file to .env.local and fill in your actual values

# AI API key for quiz generation (REQUIRED)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Database connections (auto-populated by Vercel)
DATABASE_URL=your-database-url
DATABASE_URL_UNPOOLED=your-database-url-unpooled

# Authentication (NextAuth.js)
NEXTAUTH_SECRET=your-nextauth-secret  # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000    # Change to your domain in production

# Email provider (Resend)
RESEND_API_KEY=your-resend-api-key    # Get from: https://resend.com/api-keys
EMAIL_FROM="Scry <noreply@yourdomain.com>"

# Stack Auth (optional)
NEXT_PUBLIC_STACK_PROJECT_ID=your-stack-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-stack-client-key
STACK_SECRET_SERVER_KEY=your-stack-server-key

# Vercel KV (optional - for rate limiting)
KV_URL=your-kv-url
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token